                    <ListBoxItem Content="Новые"/>
                    <ListBoxItem Content="С пробегом"/>
                </ListBox>
                
                <ComboBox materialDesign:HintAssist.Hint="Марка">
                    <ComboBoxItem Content="Любая"/>
                    <ComboBoxItem Content="Отечественные"/>
                    <ComboBoxItem Content="Иномарки"/>
                </ComboBox>
                
                <ComboBox materialDesign:HintAssist.Hint="Кузов">
