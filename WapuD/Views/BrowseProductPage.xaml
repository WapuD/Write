                    </ComboBox>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" BorderBrush="Black" BorderThickness="0.2" materialDesign:HintAssist.Hint="Цена от,₽"/>
                    <TextBox Grid.Column="1" BorderBrush="Black" BorderThickness="0.2" materialDesign:HintAssist.Hint="До"/>
                </Grid>

                <ComboBox materialDesign:HintAssist.Hint="Сортировать по">
                    <ComboBoxItem Content="По возрастанию цены"/>
                    <ComboBoxItem Content="По убыванию цены"/>
